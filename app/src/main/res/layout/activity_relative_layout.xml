<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <View
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="30sp"
        android:layout_alignParentStart="true"
        android:background="#874646"
        />


    <View
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="157sp"
        android:layout_marginTop="30sp"
        android:background="#874646" />

    <View
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="285sp"
        android:layout_marginTop="30sp"
        android:layout_alignParentStart="true"
        android:background="#874646"
        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="50sp"
        android:layout_alignParentStart="true"
        android:padding="20sp"
        android:scaleX="3"
        android:scaleY="3"
        android:id="@+id/firstbox"
        android:src="@drawable/satellite"
        app:tint="@color/black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="177sp"
        android:layout_alignParentStart="true"
        android:padding="20sp"
        android:scaleX="3"
        android:scaleY="3"
        android:id="@+id/secondbox"
        android:src="@drawable/rocket"
        app:tint="@color/black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="300sp"
        android:layout_alignParentStart="true"
        android:padding="20sp"
        android:scaleX="3"
        android:scaleY="3"
        android:id="@+id/thirdbox"
        android:src="@drawable/agriculture"
        app:tint="@color/black" />

    <TextView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/firstbox"
        android:layout_marginTop="50sp"
        android:text="DCA"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="20sp"
        android:background="@color/black"
        android:layout_marginStart="30dp"
        android:id="@+id/blackBox"/>

    <TextView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/thirdbox"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="25sp"
        android:text="Marks"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/black"
        android:id="@+id/blackBox2"
        />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@id/firstbox"
        android:layout_centerInParent="true"
        android:layout_marginTop="70sp"
        android:background="#FF0000"
        android:src="@drawable/twowayarrow"
        android:id="@+id/ivRed"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Way"
        android:layout_below="@id/blackBox"
        android:textSize="50sp"
        android:background="#FFC107"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_alignParentStart="true"
        android:id="@+id/switchOW"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Traveller"
        android:background="#2196F3"
        android:textSize="50sp"
        android:layout_below="@id/switchOW"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:id="@+id/tvTraveller"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTraveller"
        android:layout_marginTop="70sp"
        android:text="Relative Layout"
        android:id="@+id/tvRelativeLayout"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click for Constarint Layout"
        android:textSize="30sp"
        android:layout_below="@+id/tvRelativeLayout"
        android:layout_marginTop="25sp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:id="@+id/btnConstraintLayout"/>
</RelativeLayout>